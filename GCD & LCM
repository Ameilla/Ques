
//For two numbers


#include<stdio.h>
main()
{
    int n1,n2,i,gcd,lcm;
    printf("Enter the value of n1 and n2\n");
    scanf("%d%d",&n1,&n2);
    for(i=1;i<=n1&&i<=n2;i++)
    {
        if(n1%i==0&&n2%i==0)
        {
            gcd=i;
        }
    }
    lcm=(n1*n2)/gcd;
    printf("Lcm = %d\n",lcm);
    printf("Gcd= %d",gcd);
}


//For three numbers


#include<stdio.h>
main()
{
    int n1,n2,n3,i,gcd,lcm;
    printf("Enter the values of n1, n2 and n3\n");
    scanf("%d%d%d",&n1,&n2,&n3);
    for(i=1;i<=n1&&i<=n2&&i<=n3;i++)
    {
        if(n1%i==0&&n2%i==0&&n3%i==0)
        {
            gcd=i;
        }
    }
    lcm=(n1*n2*n3)/gcd;
    printf("Gcd= %d\n",gcd);
    printf("Lcm= %d",lcm);
}
