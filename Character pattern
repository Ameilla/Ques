#include<stdio.h>
main()
{
    int n,i,j;
    char c;
    printf("Enter the character to be printed: ");
    scanf("%c",&c);
    printf("Max Number of time printed: ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%c ",c);
        }
        printf("\n");
    }
}
