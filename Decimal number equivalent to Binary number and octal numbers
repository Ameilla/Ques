
#include<stdio.h>
main()
{
    int a[10],b[10],n,num,i=0,j=0;
    printf("Decimal Number: ");
    scanf("%d",&n);
    num=n;
    while(n!=0)
    {
        a[i]=n%2;
        n=n/2;
        i++;
    }
    printf("Binary Number= ");
    for(i=i-1;i>=0;i--)
    {
        printf("%d",a[i]);
    }
    while(num!=0)
    {
        b[j]=num%8;
        j++;
        num=num/8;
    }
    printf("\nOctal= ");
    for(j=j-1;j>=0;j--)
    {
        printf("%d",b[j]);
    }
}
