#include<stdio.h>
main()
{
    int age,i,year;
    printf("Enter your age: ");
    scanf("%d",&age);
    if(age>=18)
    {
        printf("You are allowed to vote");
    }
    else
    {
        year=0;
        for(i=age;i<18;i++)
        {
            year++;
        }
        printf("you are allowed to vote after %d years",year);
    }

}
